<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SniperLog.Models"
             xmlns:viewmodel="clr-namespace:SniperLog.ViewModels"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:DataType="viewmodel:ShootingRangeDetailsViewModel"
             x:Class="SniperLog.Pages.ShootingRanges.ShootingRangeDetailsPage"
             Title="{Binding SelectedRange.Name}">
    <Grid ColumnDefinitions="*" RowDefinitions="200, *, 50">
        <Frame Grid.Row="0" Padding="5" BackgroundColor="Transparent">
            <Image x:Name="ShootingRangeImage" HeightRequest="200" Aspect="AspectFill"/>
        </Frame>

        <VerticalStackLayout Grid.Row="1" Padding="0, 15, 0, 0">
            <Label Text="{Binding SelectedRange.Name}" FontSize="24" HorizontalOptions="Center"/>
            <maps:Map x:Name="Map" HeightRequest="150" WidthRequest="50"/>

        </VerticalStackLayout>

        <Button Text="Delete" FontAutoScalingEnabled="True" FontSize="24" Padding="1, -5, 0, 0" WidthRequest="150" HeightRequest="50" Grid.Row="2" HorizontalOptions="End" VerticalOptions="End" Margin="0, 0, 15, 15" Command="{Binding DeleteThisRangeCommand}"/>
    </Grid>
</ContentPage>